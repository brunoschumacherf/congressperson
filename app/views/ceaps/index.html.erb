<p id="notice"><%= notice %></p>

<h1>Ceaps</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Total spend</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ceaps.each do |ceap| %>
      <tr>
        <td><%= ceap.name %></td>
        <td><%= ceap.date %></td>
        <td><%= ceap.total_spend %></td>
        <td><%= link_to 'Show', ceap %></td>
        <td><%= link_to 'Edit', edit_ceap_path(ceap) %></td>
        <td><%= link_to 'Destroy', ceap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

